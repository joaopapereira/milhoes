%div{:class => 'container', :id => 'main-container'}
    %div{:class=>'row'}
        = button_to 'Update feed', {:controller => 'welcome', :action => 'update'}, {:class => 'btn btn-sm btn-success', :method => 'get'}
    %div{:class=>'row'}
        %div{:class=>'col-md-7'}
            %table{:class => 'table table-hover'}
                %thead
                    %tr
                        %td Mes
                        %td Responsavel
                %thead
                    - @responsibles.each do |responsible|
                        %tr
                            %td= responsible.month.strftime("%B %Y")
                            %td= responsible.person.name
        %div{:class=>'col-md-5'}
            %table{:class => 'table table-hover'}
                %thead
                    %tr
                        %td Proxima data
                        %td Jackpot?
                        %td Numero apostas
                        %td Premio
                %tbody
                    %tr
                        %td= @next_beat.next_game_date
                        %td= @next_beat.as_jackpot
                        %td= @next_beat.number_of_beats
                        %td= number_to_currency(@next_beat.prize, :unit => "â‚¬")
            %table{:class => 'table table-hover'}
                %thead
                    %tr
                        %td Apostas
                %tbody
                    - @games.each do |game|
                        - game.bets.each do |bet|
                            %tr
                                %td= bet.to_s
            %table{:class => 'table table-hover'}
                %thead
                    %tr
                        %td Ultimo jogo
                        - if @last_game == nil
                            %td= "Ninguem jogou para o ultimo jogo"
                        - else
                            %td= "Certas(#{@last_game.winner_combination})"
                %tbody
                    - if @last_game == nil
                        %tr
                            %td Ninguem jogou a semana passada
                    - else
                        - @last_game.bets.each do |bet|
                            %tr
                                %td= bet.compare_with(@last_game.winner_combination).html_safe
                                %td= bet.number_correct(@last_game.winner_combination)
